<!DOCTYPE module PUBLIC "-//Checkstyle//DTD Checkstyle Configuration 1.3//EN"
        "https://checkstyle.org/dtds/configuration_1_3.dtd">

<module name="Checker">
    <module name="LineLength">
        <property name="max" value="120"/> <!-- Ajusta el valor máximo de longitud de línea según lo necesario -->
    </module>
    <module name="TreeWalker">
        <module name="Indentation">
            <property name="basicOffset" value="4"/>
            <property name="braceAdjustment" value="0"/>
            <property name="caseIndent" value="4"/>
            <property name="lineWrappingIndentation" value="8"/>
        </module>

        <module name="MethodLength">
            <property name="max" value="50"/>
        </module>

        <module name="LeftCurly">
            <property name="option" value="eol"/> <!-- Llaves de apertura en la misma línea -->
        </module>
        <module name="RightCurly">
            <property name="option" value="same"/> <!-- Llaves de cierre alineadas con la apertura -->
        </module>
    </module>
</module>
